#!/usr/bin/env php
<?php

use Peridot\WebDriverManager\Manager;

$autoloaders = [
    __DIR__ . '/../../../autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php',
    __DIR__ . '/../autoload.php'
];

foreach ($autoloaders as $file) {
    if (file_exists($file)) {
        define('WEBDRIVER_MANAGER_COMPOSER_INSTALL', $file);
        break;
    }
}

unset($autoloaders, $file);

if (!defined('WEBDRIVER_MANAGER_COMPOSER_INSTALL')) {
    fwrite(STDERR,
        'You need to set up the project dependencies using the following commands:' . PHP_EOL .
        'curl -s http://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
    exit(1);
}

require_once WEBDRIVER_MANAGER_COMPOSER_INSTALL;

$manager = new Manager();
$manager->update();
$process = $manager->start(4444);
usleep(250000);
print "\nselenium is a thing now\n";
if (! $process->isRunning()) {
    $errors = $process->getError();
    var_dump($errors);
}
